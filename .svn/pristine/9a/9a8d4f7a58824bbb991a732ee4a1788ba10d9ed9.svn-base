<script>
    var n=0,flag=true;
    function appendTestData(){
        var html = '';
        html+=' <li class="activity_list_li">';
        html+='<a class="list_link" href="manager.html">';
        html+='<p class="item_title clearfix"><span class="am-fl">2018贵宾升级，专享好礼</span><em class="am-fr">截止：2019-09-30</em></p>';
