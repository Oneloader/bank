<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>登录</title>
    <meta content="text/html; charset=utf-8" http-equiv="Content-Type">
    <meta name="viewport"
          content="width=device-width, initial-scale=1.0, minimum-scale=1.0, maximum-scale=1.0, user-scalable=no">
    <meta http-equiv="Content-Type" content="application/xhtml+xml;charset=UTF-8">
    <meta http-equiv="Cache-Control" content="no-cache,must-revalidate">
    <meta http-equiv="pragma" content="no-cache">
    <meta http-equiv="expires" content="0">
    <meta name="format-detection" content="telephone=no, address=no">
    <meta content="yes" name="apple-mobile-web-app-capable">
    <meta content="black-translucent" name="apple-mobile-web-app-status-bar-style">
     <link rel="stylesheet" href="css/amazeui.min.css">
    <link rel="stylesheet" href="css/style.css">
</head>
<body>
<div class="login_box">
    <img src="images/logo.png" class="login_logo" alt="">
    <div class="login_ipt">
        <input type="text" class="ipt_login" placeholder="请输入手机号码">
        <div class="code_ipt clearfix">
            <input type="text" class="ipt_code am-fl" placeholder="验证码">
            <button class="btn_blue am-fr">获取验证码</button>
        </div>
        <a href="active_list.html" class="btn_orange am-fr">登   录</a>
    </div>
</div>
<script src="js/jquery-1.9.1.min.js"></script>
<script src="js/amazeui.min.js"></script>
<script src="js/jquery.imgpreload.min.js"></script>
<script>

$('.btn_blue').click(function(){
    var tim = 60;
    var interval = setInterval(function(){
        if(tim > 0){
            tim -= 1;
            $('.btn_blue').addClass('send');
            $('.btn_blue').text(tim + 'S后重新发送');
            $('.btn_blue').attr('disabled','disabled');
        }else{
            clearInterval(interval);
            $('.btn_blue').removeClass('send');
            $('.btn_blue').text('获取验证码');
            $('.btn_blue').removeAttr('disabled');
        }
    },1000)
})
</script>
</body>
</html>