     });*/

    /*
     * 以下是图片上传方法
     */
    // 上传商品图片成功回调函数
    function call_back(fileurl_tmp){
        $("#original_img").val(fileurl_tmp);
        $("#original_img2").attr('href', fileurl_tmp);
    }

    // 上传商品相册回调函数
    function call_back2(paths){
        var  last_div = $(".goods_xc:last").prop("outerHTML");
        for (i=0;i<paths.length ;i++ )
        {
            $(".goods_xc:eq(0)").before(last_div);	// 插入一个 新图片
            $(".goods_xc:eq(0)").find('a:eq(0)').attr('href',paths[i]).attr('onclick','').attr('target', "_blank");// 修改他的链接地址
            $(".goods_xc:eq(0)").find('img').attr('src',paths[i]);// 修改他的图片路径
            $(".goods_xc:eq(0)").find('a:eq(1)').attr('onclick',"ClearPicArr2(this,'"+paths[i]+"')").text('删除');
            $(".goods_xc:eq(0)").find('input').val(paths[i]); // 设置隐藏域 要提交的值
        }
    }

    /*
     * 上传之后删除组图input
     * @access   public
     * @val      string  删除的图片input
     */
    function ClearPicArr2(obj,path)
    {
        // 删除数据库记录
        $.ajax({
            type:'GET',
            url:"{:U('Admin/Goods/del_goods_images')}",
            data:{filename:path},
            success:function(){
                $(obj).parent().remove(); // 删除完服务器的, 再删除 html上的图片
            }
        });
    }

    function img_call_back(fileurl_tmp)
    {
        $("#imagetext").val(fileurl_tmp);
        $("#img_i").attr('onmouseover', "layer.tips('<img src="+fileurl_tmp+">',this,{tips: [1, '#fff']});");
    }

    function setPrice(box){
        var goods_id = $('#goods_id').val();
        if(goods_id == 0 || goods_id == ''){
            layer.msg('请先设置商品名称', {icon: 2,time: 3000});return false;
        }
        var url = "{:U('Goods/set_price')}?box="+box + '&goods_id=' + goods_id;
        layer.open({
            type: 2,
            title: '设置价格',
            shadeClose: true,
            shade: 0.2,
            area: ['80%', '80%'],
            content: url
        });
    }

    function DataLength(fData) {
        var intLength=0
        for (var i=0;i<fData.length;i++)
        {
            if ((fData.charCodeAt(i) < 0) || (fData.charCodeAt(i) > 255))
                intLength=intLength+2
            else
                intLength=intLength+1
        }
        return intLength
    }
</script>
</body>
</html>