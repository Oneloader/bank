<include file="public/layout"/>
<body style="background-color: rgb(255, 255, 255); overflow: auto; cursor: default; -moz-user-select: inherit;">
<div id="append_parent"></div>
<div id="ajaxwaitid"></div>
<div class="page">

    <div class="fixed-bar">
        <div class="item-title">
            <div class="subject">
                <h3>销售经理列表</h3>
                <h5>系统设置</h5>
            </div>
        </div>
    </div>

    <!-- 操作说明 -->
    <div id="explanation" class="explanation"
         style="color: rgb(44, 188, 163); background-color: rgb(237, 251, 248); width: 99%; height: 100%;">
        <div id="checkZoom" class="title"><i class="fa fa-lightbulb-o"></i>
            <h4 title="提示相关设置操作时应注意的要点">操作提示</h4>
            <span title="收起提示" id="explanationZoom" style="display: block;"></span>
        </div>
        <ul>
            <li>销售经理列表</li>
        </ul>
    </div>

    <div class="flexigrid">
        <div class="mDiv" style="padding-bottom: 10px;">
            <div class="ftitle">
                <h3>销售经理列表</h3>
                <h5>(共{$pager->totalRows|default=0}条记录)</h5>
            </div>

            <div title="刷新数据" class="pReload"><i class="fa fa-refresh"></i></div>

            <div class="tDiv2" style="padding: 0px;">

                <div class="fbutton">
                    <a href="javascript:void(0)" onclick="addBank(0)">
                        <div class="add" title="新增销售经理">
                            <span><i class="fa fa-plus"></i>新增销售经理</span>
                        </div>
                    </a>
                </div>
            </div>
            <form action="{:U('bank/sales_man')}" id="search-form2" class="navbar-form form-inline" method="post">
                <div class="sDiv">
                    <div class="sDiv2">
                        <input type="text" size="30" name="key_word" class="qsbox" placeholder="经理姓名">
                        <input type="submit" class="btn" value="搜索">
                    </div>
                </div>
            </form>
        </div>

        <div class="hDiv">
            <div class="hDivBox">
                <table cellspacing="0" cellpadding="0">
                    <thead>
                    <tr>
                        <th class="sign" axis="col0">
                            <div style="width: 24px;"><i class="ico-check"></i></div>
                        </th>
                        <th align="center" abbr="ac_id" axis="col4" class="">
                            <div style="text-align: center; width: 180px;" class="">销售经理名称</div>
                        </th>
                        <th align="center" abbr="ac_id" axis="col4" class="">
                            <div style="text-align: center; width: 180px;" class="">销售手机号码</div>
                        </th>
                        <th align="center" abbr="ac_id" axis="col4" class="">
                            <div style="text-align: center; width: 180px;" class="">所属支行名称</div>
                        </th>
                        <th align="center" axis="col1" class="">
                            <div style="text-align: center; width: 150px;">操作</div>
                        </th>
                        <th style="width:100%" axis="col7">
                            <div></div>
                        </th>
                    </tr>
                    </thead>
                </table>
            </div>
        </div>

        <div class="bDiv" style="height: auto;">
            <div id="flexigrid" cellpadding="0" cellspacing="0" border="0">
                <table>
                    <tbody>
                    <notempty name="lists">
                        <volist name="lists" id="list">
                            <tr>
                                <td class="sign">
                                    <div style="width: 24px;"><i class="ico-check"></i></div>
                                </td>
                                <td align="center" class="">
                                    <div style="text-align: center; width: 180px;">{$list.name}</div>
                                </td>
                                <td align="center" class="">
                                    <div style="text-align: center; width: 180px;">{$list.phone}</div>
                                </td>
                                <td align="center" class="">
                                    <div style="text-align: center; width: 180px;">{$branches[$list.branch_id]}</div>
                                </td>

                                <td align="center">
                                    <div style="text-align: center; width: 150px;">
                                        <a class="btn red" href="javascript:void(0)" onclick="del('{$list[id]}')"><i class="fa fa-trash-o"></i>删除</a>
                                        <a href="javascript:void(0)" onclick="addBank('{$list[id]}')" class="btn blue"><i class="fa fa-pencil-square-o"></i>编辑</a>
                                    </div>
                                </td>
                                <td align="" class="" style="width: 100%;">
                                    <div></div>
                                </td>
                            </tr>
                        </volist>
                        <else/>
                        <tr>
                            <td class="no-data" align="center" axis="col0" colspan="50">
                                <i class="fa fa-exclamation-circle"></i>没有符合条件的记录
                            </td>
                        </tr>
                    </notempty>
                    </tbody>
                </table>
                <notempty name="lists">
                    <!--分页位置-->
                    {$pager->show()}
                </notempty>
            </div>
        </div>
    </div>
    <script>
        function addBank(id){
            var url = "{:U('Admin/Bank/addEditSalesMan')}?id="+id;
            layer.open({
                type: 2,
                title: '添加/编辑销售经理',
                shadeClose: true,
                shade: 0.2,
                area: ['500px', '500px'],
                content: url
            });
        }

        // 删除操作
        function del(id) {
            layer.confirm('你确认要删除该销售经理吗？', function ()
            {
                // 确定
                $.ajax({
                    url: "{:U('Admin/Bank/sales_man_del')}",
                    type: 'post',
                    data: {id: id},
                    success: function (v) {
                        layer.closeAll();
                        var v = eval('(' + v + ')');
                        if (v.hasOwnProperty('status') && (v.status == 1)) {
                            layer.msg(v.msg, {icon: 1, time: 1000}); //alert(v.msg);
                            setTimeout(function () {
                                location.reload();
                            }, 1000);
                        } else
                            layer.msg(v.msg, {icon: 2, time: 1000}); //alert(v.msg);
                    }
                });
            }, function (index) {
                    layer.close(index);
            });
        }

        $(document).ready(function () {
            // 点击刷新数据
            $('.fa-refresh').click(function () {
                location.href = location.href;
            });
        });
    </script>
</body>
</html>